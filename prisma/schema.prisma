datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  /// Is Admin
  isAdmin Boolean @default(false)
  /// Name
  name String
  /// Image
  image String?
  
  password String
  /// Email
  email String @unique

  emailVerified DateTime? @map("email_verified")
  /// About
  about String?

  createdAt DateTime @default(now()) @map("created_at")

  updatedAt DateTime @updatedAt @map("updated_at")

  deletedAt DateTime? @map("deleted_at")

  hotelReviews HotelReview[]
  sightsReviews SightsReview[]

  hotelBookings HotelBooking[]
  sightsBookings SightsBooking[]

  @@map("user")
}

enum RoomType {
  basic
  luxury
  suite
}

type OfferedAmenities {
  /// Icon
  icon String
  /// Amenity
  amenity String
}

model HotelRoom {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  /// Name
  name String
  /// Slug
  slug String @unique
  /// Place
  place String
  /// Description
  description String?
  /// Price
  price Float
  /// Discount
  discount Float?
  /// Images
  images String[]
  /// Cover Image
  coverImage String @map("cover_image")
  /// Room Type
  type RoomType
  /// Special Note
  specialNote String @map("special_note") @default("Check-in time is 12:00 PM, checkout time is 11:59 AM. If you leave behind any items, please contact the receptionist.")
  /// Dimension
  dimension String?
  /// Number Of Beds
  numberOfBeds Int @map("number_of_beds") @default(1)
  /// Offered Amentities
  offeredAmenities OfferedAmenities[]
  /// Is Featured
  isFeatured Boolean @map("is_featured") @default(false)
  /// Reviews
  reviews HotelReview[]

  bookings HotelBooking[]

  createdAt DateTime @default(now()) @map("created_at")

  updatedAt DateTime @updatedAt @map("updated_at")

  deletedAt DateTime? @map("deleted_at")

  @@map("hotel_room")
}

model HotelReview {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  /// Review Text
  text String
  /// User Rating
  userRating Int @map("user_rating")

  userId String @map("user_id") @db.ObjectId
  user User @relation(fields: [userId], references: [id])

  hotelRoomId String @map("hotel_room_id") @db.ObjectId
  hotelRoom HotelRoom @relation(fields: [hotelRoomId], references: [id])

  createdAt DateTime @default(now()) @map("created_at")

  updatedAt DateTime @updatedAt @map("updated_at")

  deletedAt DateTime? @map("deleted_at")

  @@map("hotel_review")
}

model HotelBooking {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  /// Check-in Date
  checkinDate DateTime @map("checkin_date")
  /// Check-out Date
  checkoutDate DateTime @map("checkout_date")
  ///Number Of Days
  numberOfDays Int @map("number_of_days")
  /// Discout
  discount Float
  /// Adults
  adults Int
  /// Children
  children Int
  /// Total Price
  totalPrice Float @map("total_price")

  userId String @map("user_id") @db.ObjectId
  user User @relation(fields: [userId], references: [id])

  hotelRoomId String @map("hotel_room_id") @db.ObjectId
  hotelRoom HotelRoom @relation(fields: [hotelRoomId], references: [id])

  createdAt DateTime @default(now()) @map("created_at")

  updatedAt DateTime @updatedAt @map("updated_at")

  deletedAt DateTime? @map("deleted_at")

  @@map("booking")
}


type TimeSlot {
  /// Start Time
  startTime String
  /// End Time
  endTime String
}

model Sights {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  /// Name
  name String
  /// Slug
  slug String @unique
  /// Place
  place String
  /// Description
  description String?
  /// Duration
  duration Int
  /// Price
  price Float
  /// Child Price
  childPrice Float?
  /// Discount
  discount Float?
  /// Images
  images String[]
  /// Cover Image
  coverImage String @map("cover_image")
  /// Ticket Notice
  ticketNotice String @map("ticket_notice")
  /// Special Note
  specialNote String @map("special_note")
  /// Subtopics
  subtopics String[]
  /// Time slot
  timeSlots TimeSlot[]
  /// Reviews
  reviews SightsReview[]

  bookings SightsBooking[]

  createdAt DateTime @default(now()) @map("created_at")

  updatedAt DateTime @updatedAt @map("updated_at")

  deletedAt DateTime? @map("deleted_at")
  @@map("sights")
}

model SightsReview {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  /// Review Text
  text String
  /// User Rating
  userRating Int @map("user_rating")

  userId String @map("user_id") @db.ObjectId
  user User @relation(fields: [userId], references: [id])

  sightsId String @map("sights_id") @db.ObjectId
  sights Sights @relation(fields: [sightsId], references: [id])

  createdAt DateTime @default(now()) @map("created_at")

  updatedAt DateTime @updatedAt @map("updated_at")

  deletedAt DateTime? @map("deleted_at")

  @@map("sights_review")
}


model SightsBooking {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  /// Time slot
  timeSlot TimeSlot
  /// Discout
  discount Float
  /// Adults
  adults Int
  /// Children
  children Int
  /// Total Price
  totalPrice Float @map("total_price")

  userId String @map("user_id") @db.ObjectId
  user User @relation(fields: [userId], references: [id])

  sightsId String @map("sights_id") @db.ObjectId
  sights Sights @relation(fields: [sightsId], references: [id])

  createdAt DateTime @default(now()) @map("created_at")

  updatedAt DateTime @updatedAt @map("updated_at")

  deletedAt DateTime? @map("deleted_at")

  @@map("sights_booking")
}