generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  /// Is Admin
  isAdmin Boolean @default(false)
  /// Name
  name String @unique
  /// Image
  image String?
  
  password String
  /// Email
  email String?

  emailVerified DateTime?
  /// About
  about String?

  @@map("user")
}
